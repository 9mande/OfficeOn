<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:gravity="center"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">


        <ImageView
            android:id="@+id/dialog_img"
            android:layout_width="136dp"
            android:layout_height="134dp"
            android:scaleType="fitXY"
            android:src="@drawable/github_wh" />

        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Name"
            android:textColor="#1a1a1a"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Company"
            android:textColor="#1a1a1a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_position"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Position"
            android:textColor="#787878"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_phone"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Phone Number"
            android:textColor="#787878"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_email"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Email"
            android:textColor="#787878"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_btn_call"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/ic_call"
                android:paddingLeft="8dp" />

            <Button
                android:id="@+id/dialog_btn_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/ic_msg"
                android:paddingLeft="8dp" />

            <Button
                android:id="@+id/dialog_btn_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_button"
                android:drawableLeft="@drawable/ic_share"
                android:paddingLeft="8dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>