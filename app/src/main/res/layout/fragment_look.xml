<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <TextView
            android:id="@+id/look_when"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="7월 4일 날씨"
            android:textColor="#9E9E9E"
            android:textSize="8pt" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/look_weather"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginRight="80dp"
                app:srcCompat="@drawable/sun" />

            <TextView
                android:id="@+id/look_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="140dp"
                android:gravity="right"
                android:text="18℃"
                android:textColor="#1A1A1A"
                android:textSize="18pt"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/look_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="대전광역시 유성구 과학로"
            android:textColor="#9E9E9E"
            android:textSize="8pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Office Look"
        android:textColor="#1a1a1a"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="today's outfit"
        android:textColor="#9E9E9E"
        android:textSize="8pt" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/item1"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:background="@drawable/round_half"
            android:backgroundTint="#CACACA" />

        <ImageView
            android:id="@+id/look_office"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/f_s1" />

    </FrameLayout>

    <Button
        android:id="@+id/look_another"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#EEEEEE"
        android:clickable="true"
        android:gravity="center"
        android:text="stylist"
        android:textAllCaps="false"
        android:textColor="#787878"
        android:textSize="19dp" />
</LinearLayout>