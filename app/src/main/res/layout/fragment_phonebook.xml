<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_phonebook"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <ImageView
                android:id="@+id/myImage"
                android:contentDescription="myimage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/face"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/phonelist"
                app:layout_constraintEnd_toStartOf="@+id/meTable"
                app:layout_constraintStart_toStartOf="parent" />

            <TableLayout
                android:id="@+id/meTable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/phonelist"
                app:layout_constraintStart_toEndOf="@+id/myImage"
                app:layout_constraintEnd_toEndOf="parent" >

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toEndOf="@+id/myImage"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/myName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="김몰입"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/myImage" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toEndOf="@+id/myImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:id="@+id/myCompany"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="company"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/blank1"
                        app:layout_constraintStart_toEndOf="@+id/myImage" />

                    <TextView
                        android:id="@+id/blank1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="@+id/myImage"
                        app:layout_constraintEnd_toEndOf="parent"/>


                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toEndOf="@+id/myImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:id="@+id/myPosition"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="position"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="@+id/blank2"
                        app:layout_constraintStart_toEndOf="@+id/myImage" />

                    <TextView
                        android:id="@+id/blank2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="@+id/myImage"
                        app:layout_constraintEnd_toEndOf="parent" />

                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    app:layout_constraintStart_toEndOf="@+id/myImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:id="@+id/myNumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="010-1234-1234"
                        android:textSize="17sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/myImage" />

                    <ImageButton
                        android:contentDescription="urlbutton"
                        android:id="@+id/url_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:backgroundTint="#2196F3"
                        android:rotation="0"
                        android:scaleType="center"
                        android:adjustViewBounds="true"
                        app:srcCompat="?attr/actionModeShareDrawable"
                        app:tint="#FFFFFF"

                        />

                    <TextView
                        android:id="@+id/blank3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                </TableRow>

            </TableLayout>


            <ListView
                android:id="@+id/phonelist"
                android:layout_height="0dp"
                android:layout_width="match_parent"

                app:layout_constraintTop_toBottomOf="@id/myImage"/>

            <ImageView
                android:id="@+id/myImm"
                android:contentDescription="myimageeee"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:src="@drawable/face"
                android:layout_marginRight="5dp"

                app:layout_constraintTop_toBottomOf="@id/myImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>