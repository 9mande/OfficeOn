<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <shape>
            <stroke
                android:color="@color/black"
                android:width="1dp" />
            <corners android:radius="4dp"/>
            <soild android:color="#fff" />
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="4dp" />
                    <soild android:color="#E14F50" />
                </shape>
            </item>
            <item android:drawable="@drawable/round_button" android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />
        </layer-list>
    </item>
</selector>